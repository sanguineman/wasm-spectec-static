  -- if nameIR = $name(name)
  -- if TC_2 = $add_var(p, TC_0, nameIR, `EMPTY typeIR_object_init CTK eps)
  ---- ;; create IR
  -- if instantiationIR
      = annotationList typeIR_object_init prefixedNameIR
          `< typeArgumentIR_inferred* > `( argumentIR* ) nameIR (`= `{ objectDeclarationIR* }) `;

